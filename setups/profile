# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

# Enable this while switching from nano
alias nano=vim

# Automatically use sudo if needed
alias vim="editor.wrapper vim"

# Add paths
export PATH=$PATH:"`pwd`/../bin"
